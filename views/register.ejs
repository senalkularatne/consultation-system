<%include partials/header%>    

<div class="container" id="registration">
    <div class="row">
        <h1 style="text-align: center">Registration Form</h1>
        <hr>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/register" method="POST">
                <div class="form-group">
                    <label>First Name</label>
                    <input class="form-control" text="text" name="firstName" placeholder="First Name">
                </div>
                 <div class="form-group">
                    <label>Last Name</label>
                    <input class="form-control" text="text" name="lastName" placeholder="Last Name">
                </div>
                <div class="form-group">
                    <label>E-mail</label>
                    <input class="form-control" text="text" name="email" placeholder="email">
                </div>
                
                
                <div class="form-group">
                    <label>Username</label>
                    <input class="form-control" text="text" name="username" placeholder="username">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input class="form-control" text="text" name="password" placeholder="password">
                </div>
                <div class="form-group">
                    <label>Admin Code</label>
                    <input class="form-control" text="text" name="adminCode" placeholder="admin code">
                </div>
                <div class="form-group">
                    <label>Admin</label>
                    <input class="form-control" text="text" name="role" placeholder="role">
                </div>
                <div class="form-group">
                    <input class = "btn btn-block btn-primary" type="submit" value="Sign Up">
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

</body>
