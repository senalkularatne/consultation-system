<%include ../partials/header%>    

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add New Comment to <%= discussion.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/discussions/<%= discussion._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/discussions">Go Back</a>
        </div>
    </div>
</div>